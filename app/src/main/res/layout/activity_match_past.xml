<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_Ð¼ain"
    tools:context=".activity.MatchUpcomingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/roboto_regular_22_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/matchboard" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDay0"
                    style="@style/roboto_semiBold_14_text_body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:text="@string/today" />


                <TextView
                    android:id="@+id/textViewDay1"
                    style="@style/roboto_semiBold_14_text_body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:text="1" />


                <TextView
                    android:id="@+id/textViewDay2"
                    style="@style/roboto_semiBold_14_text_body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:text="2" />

                <TextView
                    android:id="@+id/textViewDay3"
                    style="@style/roboto_semiBold_14_text_body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:text="3" />

                <TextView
                    android:id="@+id/textViewDay4"
                    style="@style/roboto_semiBold_14_text_body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:text="4" />

                <TextView
                    android:id="@+id/textViewDay5"
                    style="@style/roboto_semiBold_14_text_body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:text="5" />

                <TextView
                    android:id="@+id/textViewDay6"
                    style="@style/roboto_semiBold_14_text_body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="6" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <TableLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="12dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/buttonMatchUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/button_upcoming_def" />

            <ImageView
                android:id="@+id/buttonMatchPast"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/button_past_press" />

            <ImageView
                android:id="@+id/buttonMatchSetting"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/button_setting_def" />
            />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>