<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_Ð¼ain"
    tools:context=".activity.MatchUpcomingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/roboto_regular_22_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/matchboard" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayoutDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textViewDay0"
            style="@style/roboto_semiBold_14_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:background="@drawable/selector_button_num_day"
            android:checked="true"
            android:text="@string/today" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textViewDay1"
            style="@style/roboto_semiBold_14_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:background="@drawable/selector_button_num_day"
            android:checked="false"
            android:text="1" />


        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textViewDay2"
            style="@style/roboto_semiBold_14_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginEnd="30dp"
            android:background="@drawable/selector_button_num_day"
            android:checked="false"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textViewDay3"
            style="@style/roboto_semiBold_14_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:background="@drawable/selector_button_num_day"
            android:checked="false"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textViewDay4"
            style="@style/roboto_semiBold_14_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:background="@drawable/selector_button_num_day"
            android:checked="false"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textViewDay5"
            style="@style/roboto_semiBold_14_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:background="@drawable/selector_button_num_day"
            android:checked="false"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textViewDay6"
            style="@style/roboto_semiBold_14_text_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_button_num_day"
            android:checked="false"
            android:text="6" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"

        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutDay"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="6"
        tools:listitem="@layout/card_match_upcoming" />

    <TableLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="12dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/buttonMatchUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/button_upcoming_press" />

            <ImageView
                android:id="@+id/buttonMatchPast"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/button_past_def" />

            <ImageView
                android:id="@+id/buttonMatchSetting"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/button_setting_def" />
            />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>